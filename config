volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        on_click 1 = "exec pavucontrol"
        on_click 4 = "exec pactl set-sink-volume @DEFAULT_SINK@ +5%"
        on_click 5 = "exec pactl set-sink-volume @DEFAULT_SINK@ -5%"
}

